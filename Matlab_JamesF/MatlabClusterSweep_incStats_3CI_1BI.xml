<!DOCTYPE posscript SYSTEM "posscript.dtd">
<posscript>
	<version value="0.0.1"/>
	
	<posload file="some_pos_file.pos"/>
		<cluster>
			<algorithm value="maxsep">
				<dclassify value="0" knn="1"/> <!-- Coring (pre-cluster) dist; zero to disable this step-->
				<dmax value="0.65"/> <!-- Max sep dist -->
				<dbulk value="0.0"/> <!-- AKA envelope-->
				<derode value="0.0"/> <!-- erosion distance-->
			</algorithm>
			<range file="some_range_file.rrng"/>
			<!--select ions for cluster core (aka solute)-->
			<core>
				<typelist>
					<atomtype symbol="A"/>
					<atomtype symbol="B"/>
					<atomtype symbol="Cq"/>
				</typelist>
			</core>
			<!--select ions for bulk (aka matrix)-->
			<bulk>
				<typelist>
					<atomtype symbol="Dk"/>
					<!-- <atomtype symbol="AlMg"/> -->
					<!-- Could have more ions here, like so:
					<atomtype symbol="C"/>
					<atomtype symbol="D"/>
					...	-->
				</typelist>
			</bulk>

			<sizeclip nmin="2"/>
			
			<clusterstats core="true" bulk="true" percluster="true" file="clusterstats.txt"/>
			
			<sizedist file="sizedist.txt"/>
			
		</cluster>

</posscript>
